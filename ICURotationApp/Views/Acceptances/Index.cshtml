@*@model IEnumerable<ICURotationApp.Models.Acceptance>*@

@model ICURotationApp.Models.AcceptSendingFacilityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="border-bottom" style="text-align:center; padding:25px; font-family:'Trebuchet MS'">Acceptances</h1>


<div style="background-color:#9EB0D6; padding:25px; border-top-left-radius:50px; border-top-right-radius:50px; box-shadow: 0px 10px 10px 5px #888888">

    <form asp-controller="Acceptances" asp-action="Index" method="get">

        <p>

            Sending Facility: <select style="margin-right:50px" asp-for="SFacilities" asp-items="Model.SendingFacilities">
                <option value="">All</option>
            </select>

            Receiving Facility: <select style="margin-right:50px" asp-for="RFacilities" asp-items="Model.ReceivingFacilities">
                <option value="">All</option>
            </select>
            <input type="submit" value="Search"  />

        </p>

    </form>

    <p>
        <a class="text-primary" asp-action="Create">Add Acceptance</a>
    </p>

</div>


<table class="table table-striped table-hover table-borderless">
    <thead class="table-bordered" style="color:white; font-family:'Trebuchet MS'; font-size:larger; background-color:#0E5064">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].Date)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].GoldenHourNumber)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].ChiefComplaint)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].SendingFacility)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].ReceivingFacility)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].InitiationLocation)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Acceptances[0].SkipReason)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color:#9EB0D6; box-shadow: 5px 10px 18px #888888">
        @foreach (var item in Model.Acceptances)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.GoldenHourNumber)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.ChiefComplaint)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.SendingFacility)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.ReceivingFacility)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.InitiationLocation)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.SkipReason)
                </td>
                <td>
                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.AcceptanceId">Edit</a>
                    <!-- <a asp-action="Details" asp-route-id="@item.AcceptanceId">Details</a> -->
                    <a class="text-primary"  asp-action="Delete" asp-route-id="@item.AcceptanceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
